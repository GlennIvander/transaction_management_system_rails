<%= form_with model: @transaction, local: false, id: "transaction_form" do |f| %>
  <div class="mb-4">
    <%= f.label :transaction_date, class: "block text-sm font-medium text-gray-700" %>
    <%= f.date_field :transaction_date, class: "mt-1 block w-full rounded border-gray-300 shadow-sm" %>
    <% if transaction.errors[:transaction_date].any? %>
      <p class="text-sm text-red-600"><%= transaction.errors[:transaction_date].first %></p>
    <% end %>
  </div>

  <div class="mb-4">
    <%= f.label :account_number, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :account_number, class: "mt-1 block w-full rounded border-gray-300 shadow-sm" %>
    <% if transaction.errors[:account_number].any? %>
      <p class="text-sm text-red-600"><%= transaction.errors[:account_number].first %></p>
    <% end %>
  </div>

  <div class="mb-4">
    <%= f.label :account_holder_name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :account_holder_name, class: "mt-1 block w-full rounded border-gray-300 shadow-sm" %>
    <% if transaction.errors[:account_holder_name].any? %>
      <p class="text-sm text-red-600"><%= transaction.errors[:account_holder_name].first %></p>
    <% end %>
  </div>

  <div class="mb-4">
    <%= f.label :amount, class: "block text-sm font-medium text-gray-700" %>
    <%= f.number_field :amount, class: "mt-1 block w-full rounded border-gray-300 shadow-sm", step: 0.01, min: 0%>
    <% if transaction.errors[:amount].any? %>
      <p class="text-sm text-red-600"><%= transaction.errors[:amount].first %></p>
    <% end %>
  </div>

  <div class="text-right">
    <%= f.submit "Create Transaction", class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700" %>
  </div>
<% end %>
